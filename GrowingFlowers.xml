<Ui xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

  <Script file="GrowingFlowers.lua"/>

  <Frame name="GrowingFlowers_Frame" parent="UIParent">

    <Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" tile="true">
      <BackgroundInsets>
        <AbsInset left="0" right="0" top="0" bottom="0"/>
      </BackgroundInsets>
    </Backdrop>

    <Size>
      <AbsDimension x="240" y="260"/>
    </Size>

    <Anchors>
      <Anchor point="RIGHT" relativeTo="UIParent">
        <Offset>
          <AbsDimension x="0" y="0" />
        </Offset>
      </Anchor>
    </Anchors>

    <Layers>

      <Layer level="BACKGROUND">
        <Texture name="GrowingFlowers_TopBar" >
          <Color r="0" g="0" b="0" a="0.4"/>
          <Size>
            <AbsDimension x="0" y="24"/>
          </Size>
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>

            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>

            <Anchor point="RIGHT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>

        </Texture>

        <Texture name="GrowingFlowers_BottomBar" >
          <Color r="0" g="0" b="0" a="0.4"/>
          <Size>
            <AbsDimension x="0" y="24"/>
          </Size>
          <Anchors>
            <Anchor point="Bottom">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>

            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>

            <Anchor point="RIGHT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>

        </Texture>
      </Layer>

      <Layer level="OVERLAY">

        <FontString name="GrowingFlowers_LevelRange" font="Fonts\ARIALF.TTF"
          inherits="GameFontWhite"
          text="Levels 1 to 7">
          <FontHeight>
            <AbsValue val="12"/>
          </FontHeight>
          <Color r="1.0" g="1.0" b="1.0"/>

          <Size>
            <AbsDimension x="0" y="24"/>
          </Size>

          <Anchors>

            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>

            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>

            <Anchor point="RIGHT">
              <Offset>
                <AbsDimension x="0" y="0"/>
              </Offset>
            </Anchor>

          </Anchors>
         </FontString>

        <FontString name="GrowingFlowers_PreviousInstruction" font="Fonts\ARIALF.TTF"
          inherits="GameFontWhite" justifyH="LEFT"
          text="">
          <FontHeight>
            <AbsValue val="12"/>
          </FontHeight>
          <Color r="1.0" g="1.0" b="1.0"/>

          <Size>
            <AbsDimension x="0" y="60"/>
          </Size>

          <Anchors>

            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="-32"/>
              </Offset>
            </Anchor>

            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="8" y="0"/>
              </Offset>
            </Anchor>

            <Anchor point="RIGHT">
              <Offset>
                <AbsDimension x="-8" y="0"/>
              </Offset>
            </Anchor>

          </Anchors>
         </FontString>

         <FontString name="GrowingFlowers_CurrentInstruction" font="Fonts\ARIALF.TTF"
           inherits="GameFontWhite" justifyH="LEFT"
           text="">
           <FontHeight>
             <AbsValue val="12"/>
           </FontHeight>
           <Color r="1.0" g="1.0" b="1.0"/>

           <Size>
             <AbsDimension x="0" y="60"/>
           </Size>

           <Anchors>

             <Anchor point="TOP">
               <Offset>
                 <AbsDimension x="0" y="-100"/>
               </Offset>
             </Anchor>

             <Anchor point="LEFT">
               <Offset>
                 <AbsDimension x="8" y="0"/>
               </Offset>
             </Anchor>

             <Anchor point="RIGHT">
               <Offset>
                 <AbsDimension x="-8" y="0"/>
               </Offset>
             </Anchor>

           </Anchors>
          </FontString>

          <FontString name="GrowingFlowers_NextInstruction" font="Fonts\ARIALF.TTF"
            inherits="GameFontWhite" justifyH="LEFT"
            text="">
            <FontHeight>
              <AbsValue val="12"/>
            </FontHeight>
            <Color r="1.0" g="1.0" b="1.0"/>

            <Size>
              <AbsDimension x="0" y="60"/>
            </Size>

            <Anchors>

              <Anchor point="TOP">
                <Offset>
                  <AbsDimension x="0" y="-168"/>
                </Offset>
              </Anchor>

              <Anchor point="LEFT">
                <Offset>
                  <AbsDimension x="8" y="0"/>
                </Offset>
              </Anchor>

              <Anchor point="RIGHT">
                <Offset>
                  <AbsDimension x="-8" y="0"/>
                </Offset>
              </Anchor>

            </Anchors>
           </FontString>

      </Layer>
    </Layers>

    <Scripts>

      <OnLoad>
        GrowingFlowers:configureTexts();
        GrowingFlowers:addPreviousButton();
        GrowingFlowers:addNextButton();
        GrowingFlowers:setInstructionTexts()
        GrowingFlowers:registerSlashCommands()
        GrowingFlowers:registerEvents();
      </OnLoad>

      <OnEvent> GrowingFlowers:OnEvent(event);	</OnEvent>

    </Scripts>

  </Frame>

</Ui>
